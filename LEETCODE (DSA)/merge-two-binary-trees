# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def mergeTrees(self, root1: Optional[TreeNode], root2: Optional[TreeNode]) -> Optional[TreeNode]:
        root=TreeNode()
        def f(r1,r2,r):
            if not r1 and not r2:
                return None
            if not r1:
                return r2
            if not r2:
                return r1
            if not r:
                r= TreeNode()
            
            r.val=r1.val+r2.val

            r.left=f(r1.left,r2.left,r.left)
            r.right=f(r1.right,r2.right,r.right)

            return r


        return f(root1,root2,root)


        return f(root1,root2,root)
