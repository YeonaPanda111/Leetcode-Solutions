# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeNodes(self, head: Optional[ListNode]) -> Optional[ListNode]:
        p=head.next
        dumb=ListNode(0)
        p2=dumb
        while (p):
            t=0
            while(p and p.val!=0):
                t+=p.val
                p=p.next
            p2.next = ListNode(t)
            p2 = p2.next
            
            p=p.next
        return dumb.next
