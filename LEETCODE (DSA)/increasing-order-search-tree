# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def increasingBST(self, root: Optional[TreeNode]) -> Optional[TreeNode]:
        l=[]
        def f(root):
            if not root:
                return
            left=f(root.left)
            l.append(root.val)
            right=f(root.right)

        f(root)
        node=TreeNode(l[0])
        nn=node
        for i in range(1,len(l)):
            nn.right=TreeNode(l[i])
            nn=nn.right


        return node
